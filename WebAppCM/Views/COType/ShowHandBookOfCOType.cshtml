@model IEnumerable<WebAppCM.Models.HandBookOfCOType>
@{
    ViewBag.Title = "Справочник типов кадастровых обьектов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<body>
    <div>
        <h2>Справочник типов кадастровых обьектов</h2><hr />
        <table class="text-center table-bordered">
            <tr>
                <td style="width: 50px;"><p><b>№</b></p></td>
                <td style="width: 200px;"><p><b>Тип</b></p></td>
                <td style="width: 250px;"><p><b>Oпции</b></p></td>
            </tr>
            @foreach (var m in Model)
            {
                <tr>
                    <td><p>@Html.DisplayFor(model => m.Id)</p></td>
                    <td><p>@Html.DisplayFor(model => m.tHCOname)</p></td>
                    <td><a href="/COType/typeCODetails/@m.Id"class="btn btn-info btn-sm">Детали</a>&emsp;
                    <a href="/COType/Edit/@m.Id"class="btn btn-primary btn-sm">Изменить</a>&emsp;
                        <a href="/COType/Delete/@m.Id" class="btn btn-danger btn-sm">Удалить</a></td>
                </tr>
            }
        </table>
        <br />
        <a href="/COType/Create" class="btn btn-primary btn-lg">Создать новый тип кадастрового обьекта</a>&emsp;
        <a href="/CO/ListCO" class="btn btn-default btn-lg">&laquo; Вернуться к списку Кадастровыx обьектов</a>
    </div>
</body>
</html>