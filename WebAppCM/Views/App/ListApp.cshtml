@model IEnumerable<WebAppCM.Models.Application>
@{
    ViewBag.Title = "Список заявок";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Список заявок</title>
    <script src="JS/jquery-1.11.0.min.js"></script>
    <script src="/Content/JS/scrypts.js"></script>
</head>
<body>
    <div>
        <h3>Список заявок</h3>
        <table class="text-center table-bordered">
            <tr>
                <td style="width: 2%;"><p><b>№</b></p></td>
                <td style="width: 10%;"><p><b>Пользователь</b></p></td>
                <td style="width: 12%;"><p><b>Дата</b></p></td>
                <td style="width: 10%;"><p><b>Тип КО</b></p></td>
                <td style="width: 12%;"><p><b>Тип КР</b></p></td>
                <td style="width: 10%;"><p><b>Описание</b></p></td>
                <td style="width: 12%;"><p><b>Статус</b></p></td>
                <td style="width: 10%;"><p></p></td>
                <td style="width: 10%;"><p></p></td>
            </tr>
            @foreach (var m in Model)
            {
                <tr>
                    <td><p>@Html.DisplayFor(model => m.Id)</p></td>
                    <td><p>@Html.DisplayFor(model => m.customerFI)</p></td>
                    <td><p>@Html.DisplayFor(model => m.date)</p></td>
                    <td><p>@Html.DisplayFor(model => m.cadastralObject)</p></td>
                    <td><p>@Html.DisplayFor(model => m.typeCW)</p></td>
                    <td><p>@Html.DisplayFor(model => m.description)</p></td>
                    <td><p>@Html.DisplayFor(model => m.status)</p></td>
                    <td><p><a href="/App/AppEdit/@m.Id">Изменить</a></p></td>
                    <td><p><a href="/App/AppDelete/@m.Id">Удалить</a></p></td>
                </tr>
            }
        </table>
        <br />
            <p><a href="/App/AppCreate" class="btn btn-primary btn-lg">Создать  новую заявку</a></p>
      </div>
</body>
</html>