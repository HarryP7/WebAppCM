@model WebAppCM.Models.HandBookOfCOType
@{
    ViewBag.Title = "Изменение типа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Изменение типа</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <div class="col-md-10">
                <b>Имя: </b>@Html.EditorFor(model => model.tHCOname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tHCOname, "", new { @class = "text-danger" })
            </div>
        </div>
        <a href="/COType/ShowHandBookOfCOType" class="btn btn-default btn-lg">&laquo; Вернуться к Справочнику типов</a>&emsp;
        <input type="submit" value="Сохранить" class="btn btn-primary btn-lg" />
    </div>
}